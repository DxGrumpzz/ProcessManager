<Window x:Class="ProcessManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessManager.UI"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        
        Closing="Window_Closing">


    <Grid Margin="10">

        <StackPanel HorizontalAlignment="Left">

            <Button Content="Run processes" 
                    Click="Button_Run_Processes_Click"
                    
                    Margin="0,0,0,10"/>

            <Button Content="Close processes"
                    Click="Button_Close_Processes_Click"/>

        </StackPanel>

        
        <StackPanel x:Name="ProcessList" 
                    HorizontalAlignment="Right">
            
           
        </StackPanel>

    </Grid>

</Window>
