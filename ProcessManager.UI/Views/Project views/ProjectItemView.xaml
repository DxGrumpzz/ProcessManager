<UserControl x:Class="ProcessManager.UI.ProjectItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessManager.UI"
             mc:Ignorable="d" 
            
             d:DesignHeight="450" 
             d:DesignWidth="800"
             
             d:DataContext="{x:Static local:ProjectItemViewModel.DesignInstance}">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        
        <Grid>
            
        <Button Content="Back to main page"
                
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                
                Command="{Binding GotoMainPageCommnad}"/>

            <Button Content="Delete project"
                    
                    HorizontalAlignment="Right"
                    
                    Command="{Binding DeleteProjectCommand}"/>

        </Grid>

        <!-- The name of the project -->
        <StackPanel Margin="0,10"
                    
                    Grid.Row="1">

            <TextBlock Text="Project:"/>

            <TextBlock Text="{Binding Project.ProjectName}"/>

        </StackPanel>
        

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      FocusVisualStyle="{x:Null}"
                      
                      Grid.Row="2">

            <StackPanel>

                <!-- The list of processes to run -->
                <ItemsControl ItemsSource="{Binding ProcessList}" 
                              FocusVisualStyle="{x:Null}"
                              
                              Grid.IsSharedSizeScope="True">

                    <ItemsControl.ItemTemplate>

                        <DataTemplate>

                            <local:ProcessItemView DataContext="{Binding}" 
                                                   
                                                   Margin="0,0,0,5"/>

                        </DataTemplate>

                    </ItemsControl.ItemTemplate>

                </ItemsControl>

                
                <!-- Add GUI process button -->
                <Button Content="Add new GUI process"
                        
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        
                        Command="{Binding AddNewProcessCommand}"/>


                <!-- Add console process button -->
                <Button Content="Add console process "
                        
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        
                        Command="{Binding AddNewConsoleProcessCommand}"/>
                
            </StackPanel>
            
        </ScrollViewer>

    </Grid>

</UserControl>